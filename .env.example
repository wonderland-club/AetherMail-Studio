# SMTP (QQ)
SMTP_SERVER=smtp.qq.com
SMTP_PORT=465
SMTP_USER=your@qq.com
SMTP_PASSWORD=your_app_password

# Doubao
DOUBAO_API_KEY=your_doubao_api_key
DOUBAO_MODEL_ID=your_doubao_model_id

# Logging
LOG_FILE=logs/start_server.log
LOG_LEVEL=INFO
LOG_RESET_ON_START=true
LOG_CONSOLE=true

# SSL CA bundle (for SMTP TLS verification)
SSL_CERT_FILE=.venv/lib/python3.13/site-packages/certifi/cacert.pem
